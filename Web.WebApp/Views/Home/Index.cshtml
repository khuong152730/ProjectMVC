<script>
    $(document).ready(function () {
        $("#daqua").addClass("hid");
       
    });
    $(".c2").click(function(){
         $("#tieptheo").addClass("hid");
         $(".c1").removeClass("btn-primary");
         $("#daqua").removeClass("hid");
        $(".c2").addClass("btn-primary");
        $(".c2").removeClass("btn-light");
            });
    $(".c1").click(function(){
         $("#tieptheo").removeClass("hid");
         $("#daqua").addClass("hid");
         $(".c1").addClass("btn-primary");
        $(".c2").removeClass("btn-primary");
        $(".c2").addClass("btn-light");
            });
</script>