@model Web.WebApp.Areas.Admin.ViewModel.Administration.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<form method="post" asp-action="EditRole" class="mt-3">
    <div class="container-fluid">
        <h3>Edit Role</h3>

        <table class="table table-dark" style="width:40%;margin: 0 auto;">
            <thead class="thead-light text-center">
                <tr>
                    <th>ID</th>
                    <th>RoleName</th>
                </tr>
            </thead>
            <tbody class="text-center">
                <tr>
                    <td><input asp-for="Id" type="text"></td>
                    <td>
                        <input asp-for="RoleName" type="text">
                        <span asp-validation-for="RoleName" class="text-danger"></span>

                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button type="submit" class="btn btn-outline-warning">Cập nhật</button>
                        <a asp-action="ListRole" class="btn btn-outline-warning">Quay lại</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <a asp-controller="Administration" asp-action="EditUsersInRole"
                           asp-route-roleId="@Model.Id" class="btn btn-outline-warning">Thêm/xóa UserRole</a>
                    </td>
                </tr>
            </tbody>
            <div asp-validation-summary="All" class="text-danger"></div>
        </table>
    </div>
</form>
<style>
    table tr td input {
        outline: none;
        width: 100%;
        padding: 1rem 1rem;
    }
</style>