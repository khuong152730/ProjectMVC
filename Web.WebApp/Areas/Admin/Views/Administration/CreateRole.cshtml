  @model Web.WebApp.Areas.Admin.ViewModel.Administration.CreateRoleViewModel
    <form asp-action="CreateRole" method="post" class="mt-3">
        <div class="container-fluid">
            <h3>Create Role</h3>

            <table class="table table-dark" style="width:70%;margin: 0 auto;">
                <thead class="thead-light text-center">
                    <tr>
                        <th>Role</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    <tr>
                        <td>
                            <input asp-for="RoleName" type="text">
                            <span asp-validation-for="RoleName" class="text-danger"></span>

                        </td>
                        <td>
                            <input asp-for="Description" type="text">
                            <span asp-validation-for="Description" class="text-danger"></span>


                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <button type="submit" class="btn btn-outline-warning">Thêm</button>
                            <a asp-action="ListRole" class="btn btn-outline-warning">Quay lại</a>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </form>
    <style>
        table tr td input {
            outline: none;
            width: 100%;
            padding: 1rem 1rem;
        }
    </style>